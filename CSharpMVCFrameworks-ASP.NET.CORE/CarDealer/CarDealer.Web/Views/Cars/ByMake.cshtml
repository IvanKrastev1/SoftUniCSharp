@model CarsByMake
@{
    ViewData["Title"] = $"All {Model.Make} Cars";
}

<h2>All @Model.Make.ToString() Cars</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                TravelledDistance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>
                    @car.Make
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @(car.TravelledDistance/1000) KM
                </td>
            </tr>
        }
    </tbody>
</table>

