@model AdminAddCarFormModel
@{
    ViewData["Title"] = "Add";
}
<h2>Add Car</h2>
<form method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fuel"></label>
        <span asp-validation-for="Fuel" class="text-danger"></span>
        <select input asp-for="Fuel" class="form-control">
            <option value="1">Petrol</option>
            <option value="2">Diesel</option>
            <option value="3">LPG</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Motor"></label>
        <input asp-for="Motor" class="form-control" />
        <span asp-validation-for="Motor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Add</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
