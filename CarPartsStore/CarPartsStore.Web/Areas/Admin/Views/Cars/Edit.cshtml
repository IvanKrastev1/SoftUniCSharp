@model CarPartsStore.Services.Models.AdminCarEditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Car</h2>
<form method="post">
    <h4>Edit @Model.Make @Model.Model</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fuel"></label>
        <input asp-for="Fuel" class="form-control" />
        <span asp-validation-for="Fuel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Motor"></label>
        <input asp-for="Motor" class="form-control" />
        <span asp-validation-for="Motor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Edit</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
